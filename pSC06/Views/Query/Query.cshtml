@model List<pSC06.Models.ViewModels.QueryUserViewModels>
@{
    ViewBag.Title = "Consulta";
    Layout = "~/views/Shared/_LayoutApp.cshtml";
}

<h2>Consulta Usuarios</h2>

<div class="row">
    <br />

    <div class="col-md-12">
        <input type="button" class="btn btn-primary btn-lg" onclick="" value="Nuevo" />
        <input type="button" class="btn btn-primary btn-lg" onclick="" value="Volver Atras" />
    </div>

    <br />
    <br />
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th style="background-color: #0094ff; color: white;">ID</th>
                <th style="background-color: #0094ff; color: white;">Email</th>
                <th style="background-color: #0094ff; color: white;">Edad</th>
                <th style="background-color: #0094ff; color: white;">Accion a Tomar</th>
            </tr>

            @foreach (var Objs in Model)
            {
                <tr>
                    <td>@Objs._Id</td>
                    <td>@Objs._Email</td>
                    <td>@Objs._Edad</td>

                    <td>
                        <input type="button"
                               value="Borrar"
                               class="btn btn-danger"
                               onclick="jsDelete(@Objs._Id);" />

                        <input type="button"
                               value="Editar"
                               class="btn btn-default"
                               onclick="" />

                    </td>
                </tr>
            }
        </table>
    </div>
</div>

